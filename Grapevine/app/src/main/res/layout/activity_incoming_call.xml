<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Harshit Rastogi"
                android:textSize="30dp"
                android:id="@+id/User_Name"
                android:textColor="@color/black_color"
                android:layout_marginTop="50dp"
                android:textAlignment="center"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/User_Name"
                android:text="Incoming Call"
                android:textColor="@color/black_color"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:id="@+id/userpic_layout"
            android:layout_below="@+id/username"

            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userpic">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_marginTop="30dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/phonecontact"
                    android:id="@+id/imageProfile"
                    android:layout_centerHorizontal="true">

                </com.mikhaellopez.circularimageview.CircularImageView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/userpic"
                android:layout_marginTop="100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grapevine_logo"
                    >

                </ImageView>
            </RelativeLayout>


        </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/userpic_layout">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pick_call"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Swipe Up For Accept"
    android:id="@+id/swipe_accept"
    android:textSize="13dp"
    android:textColor="@color/black_color"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="5dp"
    />
        <com.mikhaellopez.circularimageview.CircularImageView
android:layout_marginTop="10dp"
            android:layout_width="130dp"

            android:layout_height="130dp"
            android:src="@drawable/ic_baseline_call_24"
            android:id="@+id/call_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:civ_border_width="3dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="6dp"
            app:civ_shadow_color="@color/green_color"
            >

        </com.mikhaellopez.circularimageview.CircularImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:id="@+id/end_call"
        android:layout_alignBaseline="@+id/pick_call"
        android:layout_alignParentRight="true"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe Up For Reject"
            android:id="@+id/swipe_reject"
            android:textSize="13dp"
            android:textColor="@color/black_color"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            />
        <com.mikhaellopez.circularimageview.CircularImageView
android:layout_marginTop="10dp"
            android:layout_width="130dp"

            android:layout_height="130dp"
            android:src="@drawable/ic_baseline_call_end_24"
            android:id="@+id/reject_icon"
            app:civ_border_width="3dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:civ_shadow="true"
            app:civ_shadow_radius="6dp"
            app:civ_shadow_color="@color/red_color"
            >

        </com.mikhaellopez.circularimageview.CircularImageView>
    </RelativeLayout>
</RelativeLayout>
    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>